<h1>New Path</h1>

<%= form_with(model: @path) do |form| %>
  <% if @path.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@path.errors.count, "error") %> prohibited this path from being saved:</h2>
      <ul>
        <% @path.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 15px;">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, required: true %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :strike_time, "When to notify?", style: "display: block" %>
    <%= form.datetime_field :strike_time, required: true %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :web_push_subscription_id, "Target Device", style: "display: block" %>
    <% if @devices.any? %>
      <%= form.select :web_push_subscription_id, @devices, include_blank: "None (Don't notify)" %>
    <% else %>
      <p><em>No devices registered. <%= link_to "Add one here", root_path %></em></p>
    <% end %>
  </div>

  <div>
    <%= form.submit "Create Path" %>
  </div>
<% end %>

<br>
<%= link_to "Back", paths_path %>