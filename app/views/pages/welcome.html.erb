<div style="height: 100%; display: flex; flex-direction: column;">
  <div><h1>The Golden Path</h1></div>
    <%= form_with(scope: :user, url: session_path(:user), data: { turbo: false }) do |f| %>
      <div>
        <%= f.label :email, style: "display: block" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
      </div>

      <div>
        <%= f.label :password, style: "display: block" %>
        <%= f.password_field :password, autocomplete: "current-password", required: true %>
      </div>

    <% if devise_mapping.rememberable? %>
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Log in" %>
    </div>
  <% end %>


  <p>
    <%= link_to "Sign up now", new_user_registration_path, class: "button" %>
  </p>
</div>